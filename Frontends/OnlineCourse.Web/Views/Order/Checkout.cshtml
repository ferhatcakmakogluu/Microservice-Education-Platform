
@{
    ViewData["Title"] = "Checkout";
}

@model CheckoutInfoInput

<form asp-controller="Order" asp-action="Checkout" method="post">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Adres Bilgileri</h5>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Province">İl</label>
                        <input asp-for="Province"  class="form-control" >
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="District">İlçe</label>
                        <input asp-for="District" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Street">Cadde</label>
                        <input asp-for="Street" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Line">Adres</label>
                        <input asp-for="Line" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="ZipCode">Post Kodu</label>
                        <input asp-for="ZipCode" class="form-control">
                    </div>

                    <h5 class="card-title">Ödeme Bilgileri</h5>
                    <div class="mb-3">
                        <label class="form-label" asp-for="CardName">Kart Üzerindeki Ad-Soyad</label>
                        <input asp-for="CardName" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="CardNumber">Kart Numarası</label>
                        <input asp-for="CardNumber" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Expiration">SKT</label>
                        <input asp-for="Expiration" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="CVV">CVV</label>
                        <input asp-for="CVV" class="form-control">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ödeme Özeti</h5>
                    <table class="table table-striped">
                        @foreach (var item in ViewBag.basket.BasketItems as List<BasketItemViewModel>)
                        {
                            <tr>
                                <td>@item.CourseName</td>
                                <td>@item.Price</td>
                            </tr>
                        }

                        <tr>
                            <td>@(ViewBag.basket.HasDiscount ? "İndirimli Toplam Fiyat:" : "Toplam Fiyat")</td>
                            <td>@ViewBag.basket.TotalPrice</td>
                        </tr>
                    </table>

                    <button type="submit" class="btn btn-success">Ödemeyi Tamamla</button>
                </div>
            </div>
        </div>
    </div>
</form>

