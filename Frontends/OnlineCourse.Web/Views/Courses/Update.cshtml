
@{
    ViewData["Title"] = "Update";
}

@model CourseUpdateInput

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurs Güncelleme</h5>
                <form asp-controller="Courses" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="Picture" />

                    <div class="mb-3">
                        <label class="form-label" asp-for="CategoryId">Kurs Kategorisi</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categoryList">
                            
                        </select>
                        <span class="text-danger" asp-validation-for="CategoryId"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Name">Kurs Adı</label>
                        <input asp-for="Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Price">Kurs Fiyatı</label>
                        <input asp-for="Price" class="form-control" />
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Description">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="4" cols="5"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Feature.Duration">Kurs Süresi</label>
                        <input asp-for="Feature.Duration" class="form-control" />
                        <span class="text-danger" asp-validation-for="Feature.Duration"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="PhotoFormFile">Kurs Resmi</label>
                        <input type="file" asp-for="PhotoFormFile" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary">Kurs Güncelle</button>

                </form>
            </div>
        </div>
    </div>
</div>

